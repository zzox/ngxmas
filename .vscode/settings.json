{
    "search.exclude": {
        "export/**/*.hx": true
    },
    "[haxe]": {
        "editor.codeActionsOnSave": {
            "source.sortImports": true
        }
    },
    "haxe.enableExtendedIndentation": true,
    "editor.rulers": [80, 120],
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.hx",
                "cmd": "lime build html5"
            }
        ]
    }
}
