<root>
    <attack name="ground">
        <!--Attack Links-->
        <link attack="ground-neutral" />
    </attack>

    <attack name="air">
        <!--Attack Links-->
        <link attack="air-neutral" />
    </attack>

    <attack name="ground-neutral">
        <ground/>
        <properties str="50" stun="30" kb="10,-15" defines="" />
        <!--Movement Attributes-->
        <drag frames="4,6" rates=".6,1" />
        <thrust frames="5" velocity="50,0" />
        <!--Hitbox/Special Attributes-->
        <hitbox frames="5" />
        <cancellable frames="6" />
        <!--Controls-->
        <input controls="attack" />
        <!--Attack Links-->
        <inherits from="ground" />
    </attack>

    <attack name="air-neutral">
        <air/>
        <properties str="50" stun="30" kb="10,-15" defines="" />
        <!--Special Attributes-->
        <hitbox frames="17" />
        <!--Controls-->
        <input controls="attack" />
        <!--Attack Links-->
        <inherits from="air" />
    </attack>
</root>